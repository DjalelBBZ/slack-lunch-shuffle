  "main": "app/index.js",
  "scripts": {
    "start": "node .",
    "test": "xo"
  },
  "engines": {
    "node": "6.x.x"
  },
  "dependencies": {
    "got": "^6.3.0",
    "hard-rejection": "^1.0.0",
    "js-yaml": "^3.8.1",
    "koa": "^1.2.5",
    "koa-bodyparser": "^2.2.0",
    "koa-helmet": "^3.1.0",
    "koa-route": "^2.4.2",
    "koa-session": "^3.3.1",
    "koa-static": "^2.1.0",
    "koa-views": "^5.2.0",
    "lodash.chunk": "^4.0.6",
    "lodash.shuffle": "^4.0.0",
    "mongoose": "^4.8.4",
    "nconf": "^0.8.4",
    "nunjucks": "^3.0.0",
    "pluralize": "^3.0.0",
    "winston": "^2.2.0",
    "winston-loggly": "^1.3.1"
  },
  "devDependencies": {
    "xo": "^0.17.1"
  },
  "files": [
    "app"
  ],
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false
  },
  "now": {
    "env": {
      "NODE_ENV": "production",
      "baseurl": "@baseurl",
      "mongouri": "@mongouri",
      "loggly_token": "@loggly_token",
      "loggly_subdomain": "@loggly_subdomain",
